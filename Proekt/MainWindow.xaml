<Window x:Class="WpfApp3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp3"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="410" MinWidth="410" MinHeight="350" >
    <Grid x:Name="grids" Background="Bisque">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Margin="10" >
            <TextBox x:Name="zogolovok" Background="{x:Null}" FontSize="50" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" BorderBrush="{x:Null}" Foreground="Black" SelectionBrush="{x:Null}" />
        </Grid>
        <Grid  Grid.Row="1" Margin="10" >
            <Button x:Name="NewGames" FontSize="40" HorizontalAlignment="Center" Click="NewGames_Click"/>
        </Grid>
        <Grid Grid.Row="2" Margin="10" >
            <Button x:Name="ZagryzGames" FontSize="40" HorizontalAlignment="Center" Click="ZagryzGames_Click"/>
        </Grid>
        <Grid Grid.Row="3" Margin="10" >
            <Button x:Name="exit" FontSize="40" HorizontalAlignment="Center" Click="Exit_Click"/>
        </Grid>
    </Grid>

</Window>
