<Window x:Class="WpfApp3.Message"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp3"
        mc:Ignorable="d"
        Title="Сообщение" Height="330" Width="800" MinHeight="330" MinWidth="800">
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBox Grid.Row="0" x:Name="pozdr" FontSize="50"  Text="" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" />
        <TextBox Grid.Row="1" x:Name="textBox" FontSize="50" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" />
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0" Margin="10">
                <Button IsDefault="True" x:Name="Yes" FontSize="50" Click="Yes_Click"></Button>
            </Grid>
            <Grid Grid.Column="1" Margin="10">
                <Button IsCancel="True" x:Name="No" FontSize="50"></Button>
            </Grid>
        </Grid>
    </Grid>
</Window>
